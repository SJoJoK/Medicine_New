/* miniprogram/pages/cart.wxss */

page{
  background-color: #ffffff;
  font-size: 32rpx;
}

.navigator-hover{
  background: none;
}

.cart-box{
  padding-bottom: 100rpx;
  color: grey;
  font-size: 22rpx;
}
.cart-list{
  position: relative;
  padding: 20rpx 20rpx 20rpx 285rpx;
  height: 185rpx;
  border-bottom: 1rpx solid #e9e9e9;
}

.cart-list .cart-thumb{
  position: absolute;
  top: 20rpx;
  left: 45rpx;
  width: 185rpx;
  height: 185rpx;
}
.cart-list .cart-pro-name{
  padding-top: 15rpx;
  font-size: 35rpx;
  color: black;
  display: inline-block;
  height: 105rpx;
  line-height: 50rpx;
  overflow: hidden;
}
.cart-list .cart-pro-price{
  padding: 15rpx;  
  font-size: 35rpx;
  color: rgb(219, 168, 113);  
  display: inline-block;
  float: right;
  height: 105rpx;
  line-height: 50rpx;
}
.cart-list .cart-count-box{
  position: absolute;
  left: 255rpx;
  bottom: 20rpx;
  margin-left: 5rpx;
  height: 80rpx;
}
.cart-list .cart-count-box text{
  line-height: 80rpx;
  text-align: center;
  padding-top: 10rpx;
  padding-bottom: 5rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
}

.cart-count-down,.cart-count-add{
  font-size: 44rpx;
  height: 100%;
}
.cart-count-num{
  font-size: 30rpx;
  border: rgb(143, 143, 143) 1.5rpx solid;
  border-radius: 10%;
}
.cart-del{
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 44rpx;
}
.cart-footer{
  display: flex;
  justify-content: space-between;
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 100rpx;
  line-height: 100rpx;
  box-sizing: border-box;
  border-top: 3rpx solid #ededed;
  color: rgb(143, 143, 143);
}
.cart-footer icon{
  padding:25rpx 0 0 20rpx;
}
.cart-footer .cart-toatl-price {
  flex: 1;
  text-align: left;
  padding-left: 30rpx;
  font-size: 35rpx;
}
.cart-footer .order-icon {
  color: white;
  width: 150rpx;
  background-color: black;
  line-height: 70rpx;
  margin: 15rpx;
  border-radius: 10rpx;
  font-size: 25rpx;
  text-align: center;
  margin-right: 30rpx;
}

/* 空购物车 */
.cart-no-data {
  text-align: center;
  color: rgb(142, 142, 142);
  font-size: 32rpx;
  margin-bottom: 50rpx;
  margin-top: 50%;
  letter-spacing: 3rpx;
}

.cartNav {
  width: 150rpx;
  height: 75rpx;
  background-color: rgb(0, 0, 0);
  line-height: 75rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
  text-align: center;
  color: white;
  margin-left: 40%;
  letter-spacing: 3rpx;
}